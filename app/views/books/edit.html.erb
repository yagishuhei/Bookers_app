<h1>Editing Book</h1>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field:title %>

<h4>Body</h4>
<%= f.text_area:body %>

<div>
<%= f.submit'Update Book' %>
</div>

<% end %>

<%= link_to 'show', book_path(@book.id) %>
<%= link_to "back",books_path %>


